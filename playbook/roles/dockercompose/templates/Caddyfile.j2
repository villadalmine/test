:9090 {
    basicauth / {$ADMIN_USER} {$ADMIN_PASSWORD}
    proxy / prometheus:9090 {
            transparent
        }

    errors stderr
    tls off
}


:3000 {
    proxy / grafana:3000 {
            transparent
            websocket
        }

    errors stderr
    tls off
}

:8080 {
    proxy / {{ publicip }}:8080 {
            transparent
            websocket
        }

    errors stderr
    tls off
}

:9100 {
    proxy / {{ publicip }}:9100 {
            transparent
            websocket
        }

    errors stderr
    tls off
}
